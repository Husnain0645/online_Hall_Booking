@model IEnumerable<online_Hall_Booking.Models.HallAppointment>

@{
    ViewData["Title"] = "Requests";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}

<h1>Requests</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)

            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hall)

            </th>
            <th>
                @Html.DisplayNameFor(model => model.Package)

            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)

            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)

            </th>
            <th>
                @Html.DisplayNameFor(model => model.Remarks)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AdminRemarks)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                <a asp-action="Index" asp-controller="Order" class="btn btn-outline-success"><i class="far fa-plus-square"></i> Orders List</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hall.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Package.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
                <br />
                @Html.DisplayFor(modelItem => item.phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Remarks)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AdminRemarks)
            </td>
            <td>
                @if (item.Status >= 1)
                {
                    <h6>Complete</h6>
                }

                else if (item.Status < 0)
                {
                    <h6>Decline</h6>
                }

                else
                {
                    <h6>Pending</h6>
                }


            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.HapId" class="btn btn-primary">Response</a>
                <a asp-action="Delete" asp-route-id="@item.HapId" class="btn btn-danger">Remove</a>


            </td>
        </tr>
        }
    </tbody>
</table>

