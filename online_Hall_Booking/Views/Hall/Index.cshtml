@model IEnumerable<online_Hall_Booking.Models.Hall>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}


<div class="text-center">
    <h4 class="display-4">Halls</h4>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.decription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.createdAt)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.CoverImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.logoFile)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                <a asp-action="Create" class="btn btn-outline-success"><i class="far fa-plus-square"></i> + Hall</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.decription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.createdAt)
            </td>
           
            <td>
                <img src="~/hall/cover/@item.CoverImageUrl"    width="150px" height="100px" />
               
            </td>
            <td>
                <img src="~/hall/Logo/@item.logoFile"  width="150px" height="100px" />
                
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.City.Name)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.hId"><i class="fas fa-edit"></i></a> |
                <a asp-action="Details" asp-route-id="@item.hId"><i class="fas fa-info-circle"> </i></a> |
                <a asp-action="Delete" asp-route-id="@item.hId"><i class="fas fa-trash-alt"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
